@page
@model IndexModel
@{
    ViewData["Title"] = "Vegas Open Network";
}

<!-- Home Page (for new users) -->
<div id="page-home" class="page fade-in active">
    <div class="p-6">
        <div class="bg-gray-800 rounded-xl p-6 text-center">
            <h2 class="text-2xl font-bold text-white">Community-Powered Internet</h2>
            <p class="mt-2 text-gray-400">Join the movement to build a free, open internet network in Las Vegas.</p>
            <button onclick="showPage('joinForm')" class="mt-6 w-full bg-yellow-400 text-gray-900 font-bold py-3 px-8 rounded-lg text-lg">
                Request Installation
            </button>
        </div>
        <div class="mt-6">
            <h3 class="text-lg font-semibold text-white mb-2">Network Status</h3>
            <div class="bg-gray-800 rounded-xl p-4 flex items-center justify-between">
                <div class="flex items-center space-x-3">
                    <div class="w-3 h-3 rounded-full bg-green-500 animate-pulse"></div>
                    <span class="text-green-400 font-medium">All Systems Operational</span>
                </div>
                <span class="text-sm text-gray-500">0 Nodes Online</span>
            </div>
        </div>
    </div>
</div>

